---
import { Status, TypeTask, type Tasks } from "@prisma/client";

interface Props {
  // userImage: string;
  tag?: string;
  createdAt: Date;
  updatedAt: Date;
  userId: string;
  id: number;
  type: TypeTask;
  title: string;
  status: Status;
  description: string | null;
}

const { title, tag, description, status, type } = Astro.props;
---

<div
