---
import { Status, TypeTask } from "@prisma/client";

interface Props {
  status?: Status;
  type?: TypeTask;
}

const { status,type } = Astro.props;


const STATUS_COLORS = {
  [Status.PENDING]: "bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300",
  [Status.DONE]: "bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300",
  [Status.IN_PROGRESS]: "bg-yellow-100 text-yellow-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-yellow-900 dark:text-yellow-300",
};

const STATUS_TEXT = {
  [Status.PENDING]: "Pendiente",
  [Status.DONE]: "Hecho",
  [Status.IN_PROGRESS]: "En Progreso",
};

const TYPE_COLORS = {
  [TypeTask.ONCE]: "bg-blue-100 text-blue-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-blue-900 dark:text-blue-300",
  [TypeTask.DAYLY]: "bg-green-100 text-green-800 text-xs font-medium px-2.5 py-0.5 rounded-full dark:bg-green-900 dark:text-green-300",
};

const TYPE_TEXT = {
  [TypeTask.ONCE]: "Una vez",
  [TypeTask.DAYLY]: "Diaria",
};

---

<span
  class:list={[status && STATUS_COLORS[status], type && TYPE_COLORS[type]]}
>
  {status && STATUS_TEXT[status]}
  {type && TYPE_TEXT[type]}
</span>

