---
import Stars from "@/components/stars.astro";
import Header from "@/components/header.astro";
import { ClientRouter } from "astro:transitions";



---

<!doctype html>
<html lang="es" class="">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Task App</title>
    <ClientRouter />
  </head>
  <body class="overflow-x-hidden text-white relative">
    <Header  transition:persist id="page-header" />
    <Stars transition:persist id="page-stars"   />
    <main>
      <slot />
    </main>
  </body>
</html>

<script>
  import "invokers-polyfill";
</script>

<style is:global>
  @import "../styles/global.css";
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
    @apply bg-[radial-gradient(ellipse_at_top,_#ADD8E6_0%,_#4682B4_95%)] dark:bg-[radial-gradient(ellipse_at_top,_#080e21_0%,_#1b2735_95%)];
